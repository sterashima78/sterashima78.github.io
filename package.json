    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lighthouse": "^6.2.0",
    "lint-staged": "^10.2.11",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
